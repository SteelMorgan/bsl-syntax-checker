{
  "$schema": "https://modelcontextprotocol.io/schema/mcp-config.json",
  "mcpServers": {
    "bsl-checker": {
      "description": "BSL Language Server for 1C code analysis and formatting",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "${MCP_CONTAINER_NAME}",
        "java",
        "-jar",
        "/app/app.jar"
      ],
      "env": {
        "MCP_TRANSPORT": "stdio",
        "LOGGING_ENABLED": "false"
      },
      "disabled": false
    }
  }
}
